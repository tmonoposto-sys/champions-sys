# MongoDB Atlas Connection String
# Reemplaza con tu connection string de MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Super Admin Key para crear campeonatos
SUPER_ADMIN_KEY=tu_clave_super_secreta_aqui

# Puerto del servidor (tanto frontend como backend corren en este puerto)
PORT=3001

# URL del frontend para CORS (opcional en desarrollo)
FRONTEND_URL=http://localhost:3001

# Entorno (development o production)
NODE_ENV=production
